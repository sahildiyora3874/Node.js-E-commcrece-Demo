<!-- updatecategory.html -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Category-Customize Page</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f5f5f5;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    header {
      background-color: #333;
      color: white;
      text-align: center;
      padding: 20px;
      width: 100%;
      border-bottom: 2px solid #ddd;
    }

    nav {
      display: flex;
      justify-content: center;
      background-color: #f1f1f1;
      padding: 10px;
      padding-top: 20px;
    }

    nav a {
      text-decoration: none;
      color: #ffffff;
      padding: 10px 20px;
      margin: 0 10px;
      border-radius: 5px;
      background-color: #d42102;
  
    }

    nav a:hover {
      background-color: #45a049;
    }

    form {
      max-width: 400px;
      width: 100%;
      margin: 20px;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 15px;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
      display: flex;
      flex-direction: column;
      align-items: center;
      background-color: #fff;
    }

    label {
      display: block;
      margin-bottom: 8px;
      font-weight: bold;
    }

    input,
    select {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      box-sizing: border-box;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    button {
      width: 100%;
      background-color: #d42102;
      color: #fff;
      padding: 15px;
      border: none;
      border-radius: 40px;
      cursor: pointer;
      margin-bottom: 15px;
    }

    button:hover {
      background-color: #45a049;
    }
    a {
      color: #d42102;
      text-decoration: none;
      font-weight: bold;
    }

    a:hover {
      text-decoration: underline;
    }
    .error-message {
      color: #d42102;
      margin-top: 20px;
      font-weight: bold;
      background-color: #ffe6e6;
      padding: 10px;
      border-radius: 10px;
    }
  </style>
</head>
<body>

  <header>
    <h1 style="color:#ffffff;"> Customize Categories</h1>
  </header>
  
  <nav>
    <a href="/category">Add Category</a>
    <a href="/coustmize">Update Category</a>
    <a href="/delete">Delete Category</a>
  </nav>

  <% if (typeof error !== 'undefined' && error) { %>
    <div class="error-message">
      <%= error %>
    </div>
  <% } %>
  
  <form id="DeleteCategory" action="/delete" method="post">
    <label for="categoryid">Enter Category ID:</label>
    <input type="number" id="categoryid" name="categoryid" required>
    </select>

    <button type="submit" value="delete">Delete Category</button>
    
    <p>You have not added any categories <a href="/category">Add categories</a></p>
  </form>
</body>
</html>