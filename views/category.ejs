<!-- category.html -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Categories</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #747474;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    header {
      background-color: #333;
      color: white;
      text-align: center;
      padding: 20px;
      width: 100%;
      border-bottom: 2px solid #ddd;
    }

    form {
      max-width: 400px;
      width: 100%;
      margin: 20px;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 15px;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
      display: flex;
      flex-direction: column;
      align-items: center;
      background-color: #fff;
    }

    label {
      display: block;
      margin-bottom: 8px;
      font-weight: bold;
    }

    input,
    select {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      box-sizing: border-box;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    button {
      width: 100%;
      background-color: #d42102;
      color: #fff;
      padding: 15px;
      border: none;
      border-radius: 40px;
      cursor: pointer;
      margin-bottom: 15px;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #45a049;
    }

    nav {
      display: flex;
      justify-content: center;
      background-color: #908f8f;
      padding: 10px;
      padding-top: 20px;
    }

    nav a {
      text-decoration: none;
      color: #ffffff;
      padding: 10px 20px;
      margin: 0 10px;
      border-radius: 5px;
      background-color: #d42102;
    }

    nav a:hover {
      background-color: #45a049;
    }

    .error-message {
      color: #d42102;
      margin-top: 20px;
      font-weight: bold;
      background-color: #ffe6e6;
      padding: 10px;
      border-radius: 10px;
    }

    p {
      margin-top: 10px;
      font-size: 14px;
    }

    a {
      color: #d42102;
      text-decoration: none;
      font-weight: bold;
    }

    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>

  <header>
    <h1>Add Categories</h1>
  </header>

  <nav>
    <a href="/category">Add Category</a>
    <a href="/coustmize">Update Category</a>
    <a href="/delete">Delete Category</a>
  </nav>

  <% if (typeof error !== 'undefined' && error) { %>
    <div class="error-message">
      <%= error %>
    </div>
  <% } %>
  
  <form id="CreateCategory" action="/create" method="post">
    <label for="userId">Enter User ID:</label>
    <input type="number" id="userId" name="userId" required>
  
    <label for="category">Select Category:</label>
    <select id="category" name="category" required>
      <option value="Books">Books</option>
      <option value="Fashion">Fashion</option>
      <option value="Jewelry">Jewelry</option>
      <option value="Cosmetics">Cosmetics</option>
      <option value="Sports">Sports</option>
      <option value="Home-Decor">Home-Decor</option>
    </select>

    <button type="submit" value="add">Add Category</button>
    
    <p>You can also <a href="/coustmize">customize</a> categories.</p>
  </form>
</body>
</html>

